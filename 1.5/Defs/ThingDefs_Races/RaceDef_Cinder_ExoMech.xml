<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <PawnRenderTreeDef>
        <defName>Cinder_ErodedExo</defName>
        <root Class="PawnRenderNodeProperties_Parent">
            <debugLabel>Root</debugLabel>
            <tagDef>Root</tagDef>
            <drawData>
                <defaultData>
                    <offset>(0,0,0.25)</offset>
                </defaultData>
            </drawData>
            <children>
                <li>
                    <debugLabel>Body</debugLabel>
                    <nodeClass>PawnRenderNode_AnimalPart</nodeClass>
                    <workerClass>PawnRenderNodeWorker_Body</workerClass>
                    <tagDef>Body</tagDef>
                    <skipFlag>Body</skipFlag>
                    <colorType>Skin</colorType>
                    <useRottenColor>true</useRottenColor>
                    <useSkinShader>true</useSkinShader>
                    <children>
                        <li Class="PawnRenderNodeProperties_Parent">
                            <debugLabel>Apparel root</debugLabel>
                            <tagDef>ApparelBody</tagDef>
                            <baseLayer>20</baseLayer>
                            <drawSize>1.1</drawSize>
                        </li>
                        <li Class="PawnRenderNodeProperties_Overlay">
                            <debugLabel>Firefoam</debugLabel>
                            <workerClass>PawnRenderNodeWorker_OverlayFirefoam</workerClass>
                            <overlayLayer>Body</overlayLayer>
                            <baseLayer>40</baseLayer>
                        </li>
                    </children>
                </li>
                <li Class="PawnRenderNodeProperties_Carried">
                    <debugLabel>Weapon/carried thing</debugLabel>
                    <workerClass>PawnRenderNodeWorker_Carried</workerClass>
                </li>
            </children>
        </root>
    </PawnRenderTreeDef>

    <ThingDef ParentName="BaseMechanoid" Name="Cinder_BaseMechaWalker" Abstract="True">
        <statBases>
            <MoveSpeed>5.3</MoveSpeed>
            <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.60</ArmorRating_Sharp>
        </statBases>
        <race>
            <intelligence>ToolUser</intelligence>
            <thinkTreeMain>Mechanoid</thinkTreeMain>
            <baseBodySize>1.5</baseBodySize>
            <lifeStageAges>
                <li>
                    <def>MechanoidFullyFormed</def>
                    <minAge>0</minAge>
                    <soundWounded>Pawn_Mech_Scyther_Wounded</soundWounded>
                    <soundDeath>Pawn_Mech_Scyther_Death</soundDeath>
                    <soundCall>Pawn_Mech_Scyther_Call</soundCall>
                </li>
                <li MayRequire="Ludeon.RimWorld.Biotech">
                    <def>MechanoidFullyFormed</def>
                    <minAge>100</minAge>
                    <soundWounded>Pawn_Mech_Scyther_Wounded</soundWounded>
                    <soundDeath>Pawn_Mech_Scyther_Death</soundDeath>
                    <soundCall>Pawn_Mech_Scyther_Call</soundCall>
                </li>
            </lifeStageAges>
        </race>
        <butcherProducts>
            <Steel>15</Steel>
        </butcherProducts>
    </ThingDef>

    <ThingDef ParentName="Cinder_BaseMechaWalker">
        <defName>Cinder_Mech_ErodedEXO</defName>
        <label>eroded exoskeleton</label>
        <description>todo.</description>
        <tools>
            <li>
                <label>left fist</label>
                <labelNoLocation>fist</labelNoLocation>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>18.0</power>
                <cooldownTime>2.5</cooldownTime>
                <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
                <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
            </li>
            <li>
                <label>right fist</label>
                <labelNoLocation>fist</labelNoLocation>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>18.0</power>
                <cooldownTime>2.5</cooldownTime>
                <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
                <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>15.5</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <race>
            <renderTree>Cinder_ErodedExo</renderTree>
            <body>Cinder_ErodedEXO</body>
            <baseHealthScale>1.5</baseHealthScale>
            <detritusLeavings>
                <li>
                    <def>ChunkSlagSteel</def>
                    <spawnChance>0.1</spawnChance>
                </li>
                <li>
                    <def>ChunkSlagSteel</def>
                    <spawnChance>0.1</spawnChance>
                </li>
            </detritusLeavings>
        </race>
        <statBases>
            <BandwidthCost MayRequire="Ludeon.RimWorld.Biotech">3</BandwidthCost>
        </statBases>
        <comps>
            <li Class="Embergarden.CompProperties_VehicleWeapon">
                <drawData>
                    <dataEast>
                        <offset>(0.4,0,-0.85)</offset>
                    </dataEast>
                    <dataWest>
                        <offset>(-0.4,0,1.2)</offset>
                        <layer>-3</layer>
                    </dataWest>
                    <dataSouth>
                        <offset>(-1.35,0,0.25)</offset>
                    </dataSouth>
                    <dataNorth>
                        <offset>(1.35,0,0.25)</offset>
                    </dataNorth>
                </drawData>
                <turretRotationFollowPawn>true</turretRotationFollowPawn>
                <rotationSmoothTime>0.12</rotationSmoothTime>
            </li>
            <li Class="Embergarden.CompProperties_MultipleTurretGun">
                <subTurrets>
                    <li>
                        <ID>exo turret</ID>
                        <turret>Cinder_Mounted_EXOturret</turret>
                        <autoAttack>true</autoAttack>
                        <warmingTime>5</warmingTime>
                        <angleOffset>-90</angleOffset>
                        <renderNodeProperties>
                            <li>
                                <nodeClass>Embergarden.PawnRenderNode_SubTurretGun</nodeClass>
                                <workerClass>Embergarden.PawnRenderNodeWorker_SubTurretGun</workerClass>
                                <parentTagDef>Body</parentTagDef>
                                <drawSize>0.5</drawSize>
                                <baseLayer>5</baseLayer>
                                <pawnType>Any</pawnType>
                                <drawData>
                                    <dataEast>
                                        <offset>(0.25,0,1.2)</offset>
                                    </dataEast>
                                    <dataWest>
                                        <offset>(-0.35,0,0)</offset>
                                        <rotationOffset>180</rotationOffset>
                                    </dataWest>
                                    <dataSouth>
                                        <offset>(0.75,0,0.65)</offset>
                                    </dataSouth>
                                    <dataNorth>
                                        <offset>(-0.75,0,0.9)</offset>
                                    </dataNorth>
                                </drawData>
                            </li>
                        </renderNodeProperties>
                    </li>
                    <li>
                        <ID>exo minigun</ID>
                        <turret>Cinder_Mounted_EXOminigun</turret>
                        <autoAttack>true</autoAttack>
                        <warmingTime>5</warmingTime>
                        <angleOffset>-90</angleOffset>
                        <renderNodeProperties>
                            <li>
                                <nodeClass>Embergarden.PawnRenderNode_SubTurretGun</nodeClass>
                                <workerClass>Embergarden.PawnRenderNodeWorker_SubTurretGun</workerClass>
                                <parentTagDef>Body</parentTagDef>
                                <drawSize>0.75</drawSize>
                                <baseLayer>5</baseLayer>
                                <pawnType>Any</pawnType>
                                <drawData>
                                    <dataEast>
                                        <offset>(0.95,0,-0.85)</offset>
                                    </dataEast>
                                    <dataWest>
                                        <offset>(-1.1,0,0.5)</offset>
                                        <layer>-5</layer>
                                        <rotationOffset>180</rotationOffset>
                                    </dataWest>
                                    <dataSouth>
                                        <offset>(-1.05,0,-0.7)</offset>
                                    </dataSouth>
                                    <dataNorth>
                                        <offset>(1.05,0,1.05)</offset>
                                    </dataNorth>
                                </drawData>
                            </li>
                        </renderNodeProperties>
                    </li>
                </subTurrets>
            </li>
            <li Class="AnimalBehaviours.CompProperties_Draftable">
                <makeNonFleeingToo>true</makeNonFleeingToo>
            </li>
        </comps>
    </ThingDef>

